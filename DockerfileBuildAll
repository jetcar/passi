
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY . .
RUN dotnet restore passi.sln
RUN dotnet publish passi.sln -c Release /p:UseAppHost=false

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
COPY --from=build /src/WebApp/publish /publish/WebApp
COPY --from=build /src/passiwebapi/publish /publish/passiwebapi
COPY --from=build /src/IdentityServer/publish /publish/IdentityServer
