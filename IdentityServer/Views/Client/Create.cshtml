@model IdentityServer.Controllers.ClientRegistration.ClientItemInput

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<partial name="_ValidationSummary" />

<section class="vh-100" style="background-color: #eee;">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col">
                                <p class="text-center h1 fw-bold col">New Client</p>
                                <form asp-route="Create" >

                                    <div class="flex-row align-items-center">
                                        <i class="col">ClientId</i>
                                        <div class="form-outline flex-fill col">
                                            <input class="form-control" placeholder="ClientId" asp-for="ClientId" autofocus>
                                        </div>
                                    </div>

                                    <div class="flex-row align-items-center">
                                        <i class="col">ClientSecret</i>
                                        <div class="form-outline flex-fill col">
                                            <input class="form-control" placeholder="ClientSecret" asp-for="ClientSecret">
                                        </div>
                                    </div>

                                    <div class="flex-row align-items-center">
                                        <i class="col">Url</i>
                                        <div class="form-outline flex-fill col">
                                            <input class="form-control" placeholder="Client Url" asp-for="Url" />
                                        </div>
                                    </div>
                                    <div class="flex-row align-items-center">
                                        <i class="col">OpenId return_uri</i>
                                        <div class="form-outline flex-fill col">
                                            <input class="form-control" placeholder="Return Url" asp-for="ReturnUrl">
                                        </div>
                                    </div>

                                    <div class="flex-row align-items-center">
                                        <div class="col justify-content-center">
                                            <button class="btn btn-primary" name="button" asp-action="Create" value="Create">Submit</button>
                                            <button class="btn btn-secondary" name="button" asp-action="Cancel" value="Cancel">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
