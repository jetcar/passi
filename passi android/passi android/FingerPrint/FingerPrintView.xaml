<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:passiAndroid="clr-namespace:passi_android.FingerPrint"
             x:DataType="passiAndroid:FingerPrintView"
             BackgroundColor="#FAFAFA"
             x:Class="passi_android.FingerPrint.FingerPrintView">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical">
            <Label HorizontalTextAlignment="Center" TextColor="Black" Margin="10" Text="{Binding Path=Message}"></Label>
            <Image Source="baseline_fingerprint_black_24.png"></Image>
            <Button BackgroundColor="White" TextColor="Black" CornerRadius="100"  Text="Cancel" Clicked="CancelButton_OnClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>