<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="passi_maui.Registration.RegistrationConfirmation"
    BackgroundColor="#FAFAFA"
             xmlns:utils="clr-namespace:passi_maui.utils"
             xmlns:passiMaui="clr-namespace:passi_maui">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">

        <Label HorizontalOptions="Center" Text="{ Binding Path=ResponseError}" />

        <Label HorizontalOptions="Center" Text="{Binding Path=Email}" />

        <Label HorizontalOptions="Center" Text="Confirmation Code" />
        <Label HorizontalTextAlignment="Center" Margin="5" TextColor="Black" FontAttributes="Bold" HorizontalOptions="Center" Text="{Binding Path=Code}"></Label>
        <passiMaui:NumbersPad  NumberClicked="NumbersPad_OnNumberClicked"></passiMaui:NumbersPad>
        <Button BackgroundColor="White" TextColor="Black" CornerRadius="100"  Clicked="CancelButton_OnClicked" Text="Cancel"></Button>
    </StackLayout>
</ContentPage>